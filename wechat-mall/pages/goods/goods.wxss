/* pages/goods/goods.wxss */

/*商品列表  */
.goods_list{margin:10px 0;}
.goods_item{display: -webkit-flex;display: flex;align-items: center; padding:12rpx 20rpx;margin-bottom:2rpx;background: #fff;}
.goods_img{flex:0 0 120rpx;height:120rpx;}
.goods_img image{width:100%;height:100%;}
.goods_info{width:calc(100% - 120px); margin-left:10px;}
.goods_name{font-size:14px; overflow: hidden;text-overflow: ellipsis;white-space: nowrap;color: #666;}
.goods_price_sold{margin-top:10px;}
.goods_price{color: #f60;margin-right: 10px;}
.goods_sold{font-size: 12px;color: #a8a8a8;}

.no_record{text-align: center;padding: 30px;font-size: 14px;color: #aaa;}
