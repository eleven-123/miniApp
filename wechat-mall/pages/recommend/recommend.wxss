/* pages/sort/sort.wxss */

/*导航条  */
.navbar{display:-webkit-flex;display:flex; background:#fff;}
.navbar .item{flex:1 1 20%;line-height:80rpx;text-align: center;color: #888;font-size: 14px;position: relative;}
.navbar .item.active{color: #29ADA0;}
.navbar .item.active:after{content: "";display: block;position: absolute;bottom: 0;left: 0;right: 0;height: 2rpx;background: #29ADA0;}

/*商品列表  */
.goods_list{margin:10px 0;}
.goods_item{display: -webkit-flex;display: flex;align-items: center; padding:12rpx 20rpx;margin-bottom:1rpx;background: #fff;}
.goods_img{flex:0 0 120rpx;height:120rpx;}
.goods_img image{width:100%;height:100%;}
.goods_info{width:calc(100% - 120px); margin-left:10px;}
.goods_name{font-size:14px; overflow: hidden;text-overflow: ellipsis;white-space: nowrap;color: #666;}
.goods_price_sold{margin-top:10px;}
.goods_price{color: #f60;margin-right: 10px;}
.goods_sold{font-size: 12px;color: #a8a8a8;}