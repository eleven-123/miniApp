/* pages/cart/cart.wxss */

.cart_top{display: -webkit-flex;display: flex;justify-content: space-between;align-items: center;height:84rpx;line-height:84rpx;background: #fff;position: fixed;top: 0;left: 0;width: 100%;z-index:10;
border-bottom: 1px solid #eee;}
.cart_top .edit_btn{position: absolute;right:0;padding:0 15px; height: 84rpx;line-height:84rpx;border: none;font-size: 13px;color: #29ADA0;}
.select_btn{display: -webkit-flex;display: flex;font-size: 13px;color: #333;}

.cart_list{position: relative;margin:84rpx 0; background:#fff;}
.goods_item{display: -webkit-flex;display: flex;padding:10px 0; border-bottom:1px solid #eee;position: relative;}
.goods_item:last-child{border:0;}
.item_select.select{background: #ff7223;}
.item_select{flex: 0 0 auto; width:48rpx;height:48rpx;margin:20rpx 20rpx 0;line-height:48rpx;text-align:center;border-radius: 50%; background: #ccc;}
.item_select image{width:28rpx;height:20rpx;}
.goods_img{flex:0 0 auto;width:120rpx;height:120rpx;margin-right:20rpx;}
.goods_msg{flex: 0 0 auto;width: 320rpx;}
.goods_name{overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.goods_price{color: #ff7223;font-size: 12px;margin-top:2px;}
.quantity_wrap{display:-webkit-flex;
align-self: flex-end;border:1px solid #999;position: absolute;right:20rpx;}
.item_btn{width:18px;height:18px;line-height:16px; text-align:center;font-size: 16px;color: #666}
.item_btn.item_reduce{border-right: 1px solid #999;}
.item_btn.item_add{border-left: 1px solid #999;}
.item_num{height:18px;width:34px;text-align: center;color: #666;font-size: 12px;}
.cart_bottom{display: -webkit-flex;display: flex;justify-content: space-between; height:84rpx;line-height:84rpx;background: #fff;position: fixed;bottom: 0;left: 0;width: 100%;z-index:10;
    border-top: 1px solid #eee;}
.cart_bottom .total{padding-left:15px;font-size: 13px;color: #666;}
.cart_bottom .total text{color: #ff7223;}
.cart_bottom .total .other{font-size:12px;color: #999;}
.cart_bottom .buy_btn{margin:0;background: #ff7223; color: #fff; font-size: 14px; border-radius:0;border:0;}


/* 暂无数据 */
.no_record{
    padding:70px 0 0;
    text-align: center;
}
.no_record text{
    font-size: 14px;
    color: #999;
}
.no_record .btn{
    display: block;
    margin:30rpx auto;
    width:120px;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
    background: #29ADA0;
    color: #fff;
    border-radius: 30px;
    -webkit-border-radius: 30px;
    -moz-border-radius: 30px;
    -ms-border-radius: 30px;
    -o-border-radius: 30px;
}