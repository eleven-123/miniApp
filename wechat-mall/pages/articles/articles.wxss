/*商品列表  */
.list_wrap{margin:10px 0;}
.item_wrap{display: -webkit-flex;display: flex;padding:20rpx 20rpx;margin-bottom:2rpx;background: #fff;}
.img_box{flex:0 0 120rpx;height:120rpx;}
.img_box image{width:100%;height:100%;}
.info_box{width:calc(100% - 120px); margin-left:10px;}
.info_box .name{font-size:14px; overflow: hidden;text-overflow: ellipsis;white-space: nowrap;color: #666;}
.info_box .date{margin-top:20rpx;font-size: 12px;color: #a8a8a8;}

.no_record{text-align: center;padding: 30px;font-size: 14px;color: #aaa;}
