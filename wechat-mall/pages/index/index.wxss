/**index.wxss**/

/*banner*/
.slide_image{min-width: 100%;height: 100%;}

/*sort  */
.sort_list{display:-webkit-flex;display: felx;justify-content: center; align-items: center; padding:26rpx;background: #fff;}
.sort_item{width: 20%;text-align: center;}
.sort_item image{width: 108rpx;height: 108rpx;}
.sort_item text{display: block;font-size: 12px;color: #666;}

/*专题  */
.theme_wrap{width:750rpx;height:330rpx;margin:20rpx 0;}
.theme_wrap .theme_img_wrap{width: 100%;height:100%;}
.theme_img{min-width: 100%;height:100%;}

/*产品  */
.article_list{margin-bottom:10px;padding:0 0 10px;background: #fff;}
.title_wrap{display: -webkit-flex;display: flex;align-items: center;justify-content: space-between; padding:10px 15px;border-bottom: 1px solid #eee;}
.list_wrap{display: -webkit-flex;padding:0 7px;}
.item_wrap{width:50%;margin-top: 12px; padding:0 8px;position: relative;}
.item_wrap .item_img{width:100%;height:260rpx;}
.item_wrap .item_img image{width:100%;height:100%;}
.item_wrap .item_info{position: absolute;bottom: 0;left:8px;right:8px;background: rgba(0, 0, 0, .5);color: #fff;text-align: center; overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}